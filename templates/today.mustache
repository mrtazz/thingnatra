<div id="tasklist">
  <div id="tasks">
  {{# tasks}}
    <div class=task>
        <input class="taskcheckbox task" type="checkbox"
               {{#done?}} checked="checked" {{/done?}} name="{{to_s}}"/>
        <span class="tasktext task">{{to_s}} {{#parent?}}[{{parent}}]{{/parent?}}
        </span>
    </div>
  {{/ tasks}}
  </div>
</div>
